            new Chart(detectionCtx, { type: 'bar', data: detectionData, options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true, ticks: { callback: (value) => ['', 'بسیار ضعیف', 'ضعیف', 'متوسط', 'خوب', 'عالی'][value], font: { family: 'Vazirmatn' } } }, x: { ticks: { font: { family: 'Vazirmatn' } } } }, plugins: { title: { display: true, text: 'مقایسه فناوری‌های کشف', font: { size: 18, family: 'Vazirmatn' } }, legend: { labels: { font: { family: 'Vazirmatn' } } }, tooltip: { bodyFont: { family: 'Vazirmatn' }, titleFont: { family: 'Vazirmatn' } } } } });
            const neutralizationRawData = [ { name: 'اخلالگری RF', data: [3, 5, 5, 4], color: 'rgba(59, 130, 246, 0.4)' }, { name: 'فریب GPS', data: [3, 4, 5, 3], color: 'rgba(16, 185, 129, 0.4)' }, { name: 'تور', data: [2, 4, 4, 2], color: 'rgba(249, 115, 22, 0.4)' }, { name: 'پرتابه‌ها', data: [3, 3, 1, 3], color: 'rgba(239, 68, 68, 0.4)' }, { name: 'لیزر (HEL)', data: [3, 5, 4, 4], color: 'rgba(139, 92, 246, 0.4)' }, { name: 'پهپاد شکارچی', data: [3, 3, 3, 3], color: 'rgba(236, 72, 153, 0.4)' } ];
            const neutralizationLabels = ['برد مؤثر', 'هزینه پایین (هر درگیری)', 'ریسک پایین (خسارت جانبی)', 'کارایی علیه حمله فوجی'];
            const selector = document.getElementById('neutralization-selector');
            neutralizationRawData.forEach((item, index) => { const option = document.createElement('option'); option.value = index; option.textContent = item.name; selector.appendChild(option); });
            const neutralizationCtx = document.getElementById('neutralizationChart').getContext('2d');
            const neutralizationChart = new Chart(neutralizationCtx, { type: 'radar', data: { labels: neutralizationLabels, datasets: [] }, options: { responsive: true, maintainAspectRatio: false, scales: { r: { beginAtZero: true, max: 5, ticks: { stepSize: 1, backdropColor: 'transparent', font: { family: 'Vazirmatn' } }, pointLabels: { font: { size: 12, family: 'Vazirmatn' } } } }, plugins: { title: { display: true, text: 'مقایسه روش‌های خنثی‌سازی', font: { size: 18, family: 'Vazirmatn' } }, legend: { labels: { font: { family: 'Vazirmatn' } } }, tooltip: { bodyFont: { family: 'Vazirmatn' }, titleFont: { family: 'Vazirmatn' } } } } });
            function updateNeutralizationChart() { const selectedOptions = Array.from(selector.selectedOptions).map(opt => parseInt(opt.value)); neutralizationChart.data.datasets = selectedOptions.map(index => { const item = neutralizationRawData[index]; return { label: item.name, data: item.data, backgroundColor: item.color, borderColor: item.color.replace('0.4', '1'), borderWidth: 2, pointBackgroundColor: item.color.replace('0.4', '1') }; }); neutralizationChart.update(); }
            selector.addEventListener('change', updateNeutralizationChart);
            selector.options[0].selected = true; selector.options[4].selected = true; updateNeutralizationChart();

            // --- Modal & API Integration ---
            const modal = document.getElementById('modal');
            const modalContainer = modal.querySelector('.bg-white');
            const closeModalBtn = document.getElementById('close-modal-btn');
            const modalTitle = document.getElementById('modal-title');
            const modalContent = document.getElementById('modal-content');
            const modalLoader = document.getElementById('modal-loader');
            const apiKey = ""; 

            function showModal(title, content) {
                modalTitle.textContent = title;
                modalContent.innerHTML = content;
                modalLoader.classList.add('hidden');
                modalContent.classList.remove('hidden');
                modal.classList.remove('hidden');
                setTimeout(() => {
                    modal.classList.remove('opacity-0');
                    modalContainer.classList.remove('scale-95');
                }, 10);
            }

            function hideModal() {
                modal.classList.add('opacity-0');
                modalContainer.classList.add('scale-95');
                setTimeout(() => modal.classList.add('hidden'), 300);
            }

            closeModalBtn.addEventListener('click', hideModal);
            modal.addEventListener('click', (e) => { if (e.target === modal) { hideModal(); } });

            // --- OFFLINE FEATURE HANDLERS ---
            
            document.getElementById('explain-tech-btn').addEventListener('click', () => {
                const selectedTechKey = document.getElementById('tech-explainer-selector').value;
                const data = offlineData.techExplain[selectedTechKey];
                showModal(data.title, data.content);
            });

            document.getElementById('get-recommendation-btn').addEventListener('click', () => {
                const selectedScenarioKey = document.getElementById('decision-helper-selector').value;
                const data = offlineData.decisionHelper[selectedScenarioKey];
                showModal(data.title, data.content);
            });
            
            document.getElementById('trends-list').addEventListener('click', (e) => {
                const trendItem = e.target.closest('.trend-item');
                if (!trendItem) return;
                const selectedTrendKey = trendItem.dataset.trend;
                const data = offlineData.trendAnalysis[selectedTrendKey];
                showModal(data.title, data.content);
            });

            // --- ONLINE (API) FEATURE HANDLERS ---

            async function callInitiativeAnalysisNetwork(prompt, title) {
                modalTitle.textContent = title;
                modalContent.classList.add('hidden');
                modalLoader.classList.remove('hidden');
                modal.classList.remove('hidden');
                setTimeout(() => {
                    modal.classList.remove('opacity-0');
                    modalContainer.classList.remove('scale-95');
                }, 10);

                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;
                const payload = { contents: [{ role: "user", parts: [{ text: prompt }] }] };

                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                    if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);
                    const result = await response.json();
                    
                    if (result.candidates && result.candidates.length > 0 && result.candidates[0].content.parts.length > 0) {
                        const text = result.candidates[0].content.parts[0].text;
                        modalContent.innerHTML = text.replace(/-\s\*\*(.*?)\*\*/g, '<h6 class="font-bold mt-4 mb-1">$1</h6>').replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>').replace(/\n/g, '<br>');
                    } else {
                        modalContent.textContent = 'پاسخی از شبکه تحلیل ابتکار دریافت نشد. لطفاً دوباره تلاش کنید.';
                    }
                } catch (error) {
                    console.error("Error calling API:", error);
                    modalContent.textContent = 'خطا در برقراری ارتباط با شبکه تحلیل ابتکار. لطفاً اتصال اینترنت خود را بررسی کرده و دوباره تلاش کنید.';
                } finally {
                    modalLoader.classList.add('hidden');
                    modalContent.classList.remove('hidden');
                }
            }

            // Scenario Generator (Online)
            document.getElementById('generate-scenario-btn').addEventListener('click', () => {
                const userInput = document.getElementById('scenario-input').value.trim();
                if (!userInput) return;
                const prompt = `As a military defense analyst, generate a brief, plausible threat scenario for an Iranian C-UAS system based on the following description. The scenario should be in Persian.
                Description: "${userInput}"
                
                Structure your response with these headings in Persian:
                - **شرح کلی سناریو:**
                - **مسیر پروازی محتمل:**
                - **اهداف بالقوه:**
                - **تاکتیک‌های پیشنهادی برای مقابله اولیه:**`;
                
                callInitiativeAnalysisNetwork(prompt, 'تحلیل سناریوی تهدید');
            });

            // SWOT Analysis (Online)
            document.getElementById('swot-analysis-btn').addEventListener('click', () => {
                const prompt = `Based on the context of a national C-UAS (Counter-Unmanned Aircraft System) initiative in Iran that focuses on domestic innovation, layered defense, and solving cost asymmetry, perform a detailed SWOT analysis. The response must be in Persian.

                Structure the response with four main headings:
                - **نقاط قوت (Strengths):** (e.g., Fostering domestic industry, strategic autonomy)
                - **نقاط ضعف (Weaknesses):** (e.g., Potential technology gaps, integration challenges)
                - **فرصت‌ها (Opportunities):** (e.g., Becoming a regional tech leader, export potential)
                - **تهدیدها (Threats):** (e.g., Rapid evolution of drone technology, economic sanctions impacting R&D)`;
                
                callInitiativeAnalysisNetwork(prompt, 'تحلیل راهبردی SWOT');
            });

            // Technical Deep Dive (Online)
            document.getElementById('deep-dive-btn').addEventListener('click', () => {
                const userInput = document.getElementById('deep-dive-input').value.trim();
                if (!userInput) return;
                const prompt = `As a technical expert, explain the following C-UAS concept in simple but accurate Persian.
                Concept: "${userInput}"

                Structure the response with these headings:
                - **تعریف ساده:**
                - **اهمیت آن در سامانه C-UAS:**
                - **یک مثال کاربردی:**`;

                callInitiativeAnalysisNetwork(prompt, 'کاوش عمیق فنی');
            });
        });
    </script>
</body>
</html>
